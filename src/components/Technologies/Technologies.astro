---
const specialities = [
    { name: "Astro", icon: "../src/assets/astro-img.svg", learning: true},
    { name: "React", icon: "../src/assets/react-img.svg", learning: true},
    { name: "JavaScript", icon: "../src/assets/js-img.svg", learning: false},
    { name: "Node.js", icon: "../src/assets/nodejs-img.svg", learning: false},
    { name: "PHP", icon: "../src/assets/php-img.svg", learning: false},
    { name: "MySQL", icon: "../src/assets/mysql-img.svg", learning: false},
    { name: "Java", icon: "../src/assets/java-img.svg", learning: false},
    { name: "HTML", icon: "../src/assets/html-img.svg", learning: false},
    { name: "CSS", icon: "../src/assets/css-img.svg", learning: false},
    { name: "Tailwind CSS", icon: "../src/assets/tailwind-img.svg", learning: true},
];
---

<h1 class="text-6xl font-bold flex justify-center text-center items-center mt-20">My specialities</h1>
<div class="grid grid-cols-2 max-w-xl mx-auto mt-10 gap-x-6">
    <div class="flex flex-col items-center bg-zinc-900 rounded-md p-4">
        <header class="text-2xl">Specialities</header>
        <main class="grid grid-cols-3 mt-10 place-items-center gap-4">
        {
        specialities.map((speciality) => (
            !speciality.learning && (<p  
            class="flex flex-col items-center justify-center text-center rounded-md 
            hover:transform hover:scale-110 transition-transform duration-200 ease-in-out cursor-pointer"
            title={speciality.name}>
                <img src={speciality.icon} alt={speciality.name} width="72px" height="auto"/>
                
            </p>
        )))
    }
        </main>
    </div>
    <div class="flex flex-col items-center bg-zinc-900 rounded-md p-4">
        <header class="text-2xl">Learning</header>
        <main class="grid grid-cols-3 mt-10 place-items-center gap-4">
            {
        specialities.map((speciality) => (
            speciality.learning && (<p  
            class="flex flex-col items-center justify-center text-center rounded-md 
            hover:transform hover:scale-110 transition-transform duration-200 ease-in-out cursor-pointer"
            title={speciality.name}>
                <img src={speciality.icon} alt={speciality.name} width="72px" height="auto"/>
            </p>
        )))
    }
        </main>
    </div>
</div>
